extends ../layout

block content
  .container.py-5
    if recipe
      // Recipe Header
      .row.mb-4
        .col-md-8
          h1.mb-3= recipe.title
    else
      .alert.alert-warning
        h2.text-center Recipe not found
        p.text-center The recipe you're looking for might have been removed or doesn't exist.
        .text-center.mt-4
          a.btn.btn-primary(href="/explore") Explore Recipes
